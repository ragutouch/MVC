@model IEnumerable<MvcDemo.Models.DepartmentTotal>

@{
    ViewBag.Title = "EmployeesByDepartment";
}

<h2>EmployeesByDepartment</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table style="font:12px arial; " cellpadding="5" cellspacing="0" border="1">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Total)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Total)
        </td>
    </tr>
}

</table>
