@model IEnumerable<BusinessLayer.EmployeeC1>

@{
    ViewBag.Title = "Index";
}
<h2>Index</h2>

<div style="font-family: sans-serif;">
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table border="1" cellpadding="5" cellspacing="0" style="font-size: 13px">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.employeeId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.city)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfBirth)
            </th>
            <th>Actions</th>
        </tr>

        @foreach (var item in Model)
        {
            using(Html.BeginForm("Delete", "BsEmployee", new { id = item.employeeId }))
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.employeeId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.city)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfBirth)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.employeeId }) |
                    <input type="submit" value="Delete" onclick="return confirm('Are you sure you want to delete record of @item.name    ');" />
                </td>
            </tr>
            }
        }

    </table>
</div>
